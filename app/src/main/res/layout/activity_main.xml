<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="85dp"
    app:cardCornerRadius="30dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10sp"
    >
    <Button
        android:id="@+id/viewCart"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="openCart"
        android:padding="5dp"
        android:text="VIEW CART" />

</androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:minHeight="200dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2sp"
            android:id="@+id/linear"
            android:background="@color/black"
            >

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:paddingLeft="5sp"
                android:paddingRight="5sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    >
                <ImageView
                    android:layout_width="329dp"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/northindian"
                    android:onClick="cuisineShow1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="North Indian"
                    android:textColor="#FF5722"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:paddingRight="5sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    >
                <ImageView
                    android:layout_width="329dp"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/italian"
                    android:onClick="cuisineShow2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="Italian"
                    android:textColor="#FF5722"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:paddingRight="5sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    >
                <ImageView
                    android:layout_width="329dp"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/chinese"
                    android:onClick="cuisineShow3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="Chinese"
                    android:textColor="#FF5722"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:paddingRight="5sp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="70dp"
                    >
                <ImageView
                    android:layout_width="329dp"
                    android:layout_height="240dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/southindian"
                    android:onClick="cuisineShow4"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:fontFamily="monospace"
                    android:gravity="center"
                    android:text="South Indian"
                    android:textColor="#FF5722"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hsv"

        android:layout_marginBottom="100sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemL1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:weightSum="4">
            <androidx.cardview.widget.CardView
                android:layout_width="122dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp"
                android:layout_weight="1"
                android:layout_marginStart="0dp"
                android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/northindian" />
            </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml1"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="North Indian Thali"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs 200"
                        android:textSize="30dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item1"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart1"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemL2"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:weightSum="4">
                <androidx.cardview.widget.CardView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/noodles" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml2"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noodles"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Rs150"
                        android:textSize="35dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item2"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart2"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemL3"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:weightSum="4">
                <androidx.cardview.widget.CardView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pasta"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml3"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Pasta"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Rs210"
                        android:textSize="35dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item3"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart3"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemL4"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:weightSum="4">
                <androidx.cardview.widget.CardView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/pizza" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml4"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Tomato Pizza"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Rs 300"
                        android:textSize="35dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item4"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart4"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemL5"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal"
                android:weightSum="4">
                <androidx.cardview.widget.CardView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/dosa"></ImageView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml5"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Dosa"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Rs 150"
                        android:textSize="35dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item5"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart5"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/itemL6"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:orientation="horizontal"
                android:weightSum="4">
                <androidx.cardview.widget.CardView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:background="@color/black">
                <ImageView
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/shahipaneer" />
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/iteml6"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/i6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Shahi Paneer"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="Rs 220"
                        android:textSize="35dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/item6"
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/purple_200"
                    android:onClick="addToCart6"
                    android:text="Add toCart"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
